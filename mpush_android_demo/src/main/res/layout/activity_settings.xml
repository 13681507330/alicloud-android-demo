<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.alibaba.cloudpushdemo.bizactivity.SettingsActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userAccount"
        android:hint="@string/inputplease"
        android:maxLines="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="@string/settings_bindaccount"
        android:id="@+id/bindAccount"
        android:layout_below="@+id/userAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/settings_unbindaccount"
        android:id="@+id/unbindAccount"
        android:layout_below="@+id/bindAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- 我是分隔线~ -->
    <TextView
        android:height="1dip"
        android:layout_width="wrap_content"
        android:layout_height="1dip"
        android:background="#FFFFFFFF"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/aline"
        android:layout_below="@+id/unbindAccount"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userLabel"
        android:hint="@string/inputlabelplease"
        android:maxLines="1"
        android:layout_below="@+id/aline"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_bindlabel"
        android:id="@+id/bindLabel"
        android:layout_below="@+id/userLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_unbindlabel"
        android:id="@+id/unbindLabel"
        android:layout_below="@+id/bindLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
